///
A simple chalk program.
///

class {}

Int factorial(Int i) {
  return i == 0 ? 1 : i * factorial(i);
}

class Main {
  new() {
    String msg = "Enter a number: ";
    
    print(msg); // Function 'print' is not necesarily part of Chalk.
    
    Int i = scanInt(); // Function 'scanInt' is not necesarily part of Chalk.
    
    print("\n" ++ i ++ "! = " ++ factorial(i) ++ "\n");
  }
}

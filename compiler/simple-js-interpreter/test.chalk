///
A simple chalk program.

Functions 'print' and 'scan*' for any * are not necessarily part of Chalk.
///

import RegLangParser from "reglang.chalk";

Float pi() {};

class {};

Null n() => Int i;

Float pi = 3.14159;

Int factorial(Int i) {
  Int fLess = i * factorial(i);
  
  return i == 0 ? 1 : fLess;
};

class Main {
  Main new() {
    String msg = "Enter a number: ";
    
    print(msg);
    
    Int i = scanInt();
    
    print("\n" ++ i ++ "! = " ++ factorial(i) ++ "\n");
  };
};
